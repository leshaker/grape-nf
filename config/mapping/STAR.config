// Process configuration
process {

    $index {
        tool = 'STAR'
        version = '2.4.2a'
        cpus = 4
        memory = '46G'
        time = '24h'
    }
    $mapping {
        tool = 'STAR'
        version = '2.4.2a'
        readGroup = { readGroupList.collect { it.join(":") }.join(" ") }
        profile = { "-${task.version.split("\\.")[0..1].join(".")}" + (quantificationMode ? "-"+quantificationMode : '') + (params.cufflinks ? "-"+params.cufflinks : '') }
        cpus = 6
        memory = '46G'
        time = '48h'
    }

}
